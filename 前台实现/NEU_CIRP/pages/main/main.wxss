.hd-swiper {
  margin-top: 10px;
}
.swiper-item {
  display: block;
  height: 150px;
}

image {
  width: 100%;
  height: 100%;
}

.page__hd {
  padding: 0;
}

.weui-media-box {
  padding: 5px;
}

.weui-cell {
  padding: 5px 15px;
}

.image-box {
  margin-top: 10px;
}

.image-box image {
  width: 100%;
  height: 200rpx;
  display: block;
  float: left;
}

.user-name {
  color: #3491ee;
  font-weight: bold;
}

.cell-index--van-cell__left-icon {
  font-size: 30px !important;
}

.weui-panel {
  margin-top: 0;
}

.weui-media-box:before {
  border-top: none;
}

.info-types .info-type-button {
  width: 100%;
  text-align: center;
  height: 100px;
  float: none;
  display: inline-block;
  vertical-align: middle;
}

.info-types .icon {
  display: block;
  color: #49A86E;
  margin: 20px 0 10px;
}

.info-types .text {
  font-size: 12px;
  padding: 0 5px;
  line-height: 14px;
  /* color: #49A86E; */
}

.info-types {
  margin-bottom: 10px;
  background-color: #fff;
  overflow: hidden;
}