.weui-media-box {
  padding: 5px;
}

.weui-cell {
  padding: 5px 15px;
}

.image-box {
  margin-top: 10px;
}

.image-box image {
  width: 100%;
  height: 200rpx;
  display: block;
  float: left;
}

.user-name {
  color: #3491ee;
  font-weight: bold;
}

.cell-index--van-cell__left-icon {
  font-size: 30px !important;
}

.weui-media-box:before {
  border-top: none;
}

.empty-info {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
}