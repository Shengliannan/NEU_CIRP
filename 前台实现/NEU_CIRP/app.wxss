/**app.wxss**/
@import "weui.wxss";

.page{
    background-color: #F0F1F1;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    min-height: 100vh;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-top: 10px;
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    bottom: 0;
    width: 100%;
    /* padding-bottom: 10px;
    text-align: center; */
    position: fixed;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}